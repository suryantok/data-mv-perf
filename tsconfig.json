{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "build",
    "baseUrl": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
